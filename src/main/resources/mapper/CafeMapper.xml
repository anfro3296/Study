<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cafe">

<!--1.카페 상세 내용보기  -->
<select id="list" resultType="Cafe" parameterType="String">
    select * from cafe where cafe_id=#{id}
</select>

<!--2.스터디 카페 전체 리스트 보기  -->
<select id="lookcafe" resultType="Cafe">
    select *
    from cafe
</select>

<!--3. 새로 오픈한 스터디 카페 보기 -->
<select  id="newCafe" resultType="Cafe"  >
select *
        from ( select a.*, rownum rnum
            from (select * from cafe order by cafe_regdate desc)a)
<![CDATA[
where rnum >=1 AND rnum <= 8
]]>
</select>

<!--4. 오늘의 추천 스터디 카페 보기 -->
<select  id="recommendCafe" resultType="Cafe"  >
select *
        from ( select a.*, rownum rnum
            from (select * from cafe order by cafe_id asc)a)
<![CDATA[
where rnum >=1 AND rnum <= 8
]]>
</select>

</mapper>