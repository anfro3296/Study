<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="members">

    <!-- 중복 id 체크하기 -->
    <select id="idCheck" resultType="int" parameterType="Members">
        SELECT count(*)
        FROM members
        where member_id = #{member_id}
    </select>

    <!-- 회원 가입 하기 -->
    <insert id="userJoin" parameterType="Members">
        insert into members
        values (#{member_id}, #{member_pwd}, #{member_name}, #{member_phone}, #{member_email}, sysdate)
    </insert>

    <!-- 아이디값으로 회원 아이디/비밀번호 갖고오기  -->
    <select id="getOne" resultType="Members" parameterType="Members">
        SELECT member_id, member_pwd
        FROM members
        where member_id = #{member_id}
    </select>

    <!-- 아이디에 대한 비밀번호 갖고오기  -->
    <select id="getPwd" resultType="String" parameterType="Members">
        SELECT count(*)
        FROM members
        where member_id = #{member_id}
    </select>


</mapper>

